{% extends "base.twig" %}

{% macro alerta(texto, tipo = "alert-danger") %}
	<div class="alert {{ tipo }}" role="alert">
		{{ texto }}
	</div>
{% endmacro %}

{% block navbar %}{% endblock %}

{% block contenido %}
	<div class="container">
		<h1>Iniciar sesion</h1>
		<form method="POST" target="_self">
			<div class="form-group">
				<label for="usuario">Nombre de usaurio</label>
				<input type="text" class="form-control" id="usuario" name="username" aria-describedby="usuariohelp">
				<small id="usuariohelp" class="form-text text-muted">Nombre de usuario que se registrara en el sistema</small>
			</div>
			<div class="form-group">
				<label for="password">Contrase√±a</label>
				<input type="password" name="password" class="form-control">
			</div>
			<button type="submit" class="btn btn-primary" name="registrarUsuario">Iniciar sesion</button>
			<a href="./registro" target="_self" class="btn btn-primary">Registrar usuario</a>
		</form>
	</div>
{% endblock %}
